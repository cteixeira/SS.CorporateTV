
@model SS.CorporateTV.BO.Models.DetalhePasswordViewModel

@using (Ajax.BeginForm("GravarPassword", new AjaxOptions { HttpMethod = "POST", OnBegin = "StartWaiting('.modal-footer')", OnComplete = "StopWaiting('inline')" }))
{
    <div class="main-block">
        <div class="row">
            <div class="form-group col-sm-6">
                <div class="main-block-header">
                    <span class="glyphicon icon-utilizador"></span>@Model.UtilizadorNome
                    <div class="operacoes">
                    </div>
                </div>
            </div>
        </div>
        <div class="main-block-body">
            @Html.HiddenFor(ut => ut.UtilizadorID)
            @if (Model.UtilizadorID > 0)
            {
                <div class="row">
                    <div class="form-group col-sm-3">
                        @Html.LabelFor(model => model.PasswordAntiga)
                    </div>
                    <div class="form-group col-sm-3">
                        @Html.PasswordFor(model => model.PasswordAntiga, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PasswordAntiga)
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-3">
                        @Html.LabelFor(model => model.PasswordNova)
                    </div>
                    <div class="form-group col-sm-3">
                        @Html.PasswordFor(model => model.PasswordNova, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PasswordNova)
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-3">
                        @Html.LabelFor(model => model.ConfirmarPasswordNova)
                    </div>
                    <div class="form-group col-sm-3">
                        @Html.PasswordFor(model => model.ConfirmarPasswordNova, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ConfirmarPasswordNova)
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="form-group col-sm-6">
                <div class="form-group footer">

                    <input type="submit" class="btn btn-success" value="@SS.CorporateTV.BO.Resources.Geral.Gravar" />
                </div>
            </div>
        </div>
    </div>
}
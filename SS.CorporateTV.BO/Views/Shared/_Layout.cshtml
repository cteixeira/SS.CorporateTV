<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@SS.CorporateTV.BO.Resources.Geral.NomeApp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge;" />
    <link href="~/CorpTV.ico" rel="shortcut icon" type="image/x-icon" />

    @System.Web.Optimization.Styles.Render("~/Content/core")
    @System.Web.Optimization.Styles.Render("~/Styles/Site.Empresa.css")
    @System.Web.Optimization.Scripts.Render("~/scripts/core")
    @System.Web.Optimization.Scripts.Render("~/scripts/jqueryval")
    <!-- Respond.js =need to be loaded after all CSS3 media= -->
    @{ Html.RenderPartial("_respond"); }
</head>
<body class="text-body" style="margin:0;padding:0;border:0;outline:0;">

    @{ Html.RenderPartial("_MenuTopo"); }

    <div id="conteudo" class="container">
        <div class="row">
            @if (Request.IsAuthenticated)
            {
                <div id="body-menu" class="col-sm-3 col-md-2 margemtopmenu">
                    @{ Html.RenderPartial("_MenuPrincipal"); }
                </div>
                <div id="body-content" class="col-sm-9 col-md-10 margemtopconteudo">
                    @RenderBody()
                </div>
            }
            else
            {
                <div class="col-md-12 margemtoplogin">
                    @RenderBody()
                </div>
            }
        </div>
    </div>

    <div id="divmodaltarget"></div>
    <div id="divmodaltargetsub"></div>

    @RenderSection("scripts", required: false)

    <div style="display:none; float: right;" class="formLoader">
        <img src="~/images/loader.gif" alt="loading" />
    </div>
</body>
</html>